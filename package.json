{
  "name": "utility-node-opts-parser",
  "version": "0.0.5",
  "description": "Parse the opts feeding from environment variables or arguments. Won't handle `--test-opt=\"value\"` case.",
  "main": "dist/es2015-node/index.js",
  "scripts": {
    "lint": "eslint --fix index.js ./lib/**/*.js",
    "test": "npm run clean-coverage; npm run lint; FORCE_COLOR=true babel-node node_modules/.bin/isparta cover --report text --report html --report lcovonly _mocha -- --recursive --full-trace --es_staging --harmony --check-leaks --compilers js:babel-register -c -R spec ./test/**/*.spec.js | cat",
    "test-only": "FORCE_COLOR=true mocha --recursive --full-trace --es_staging --harmony --check-leaks --compilers js:babel-register -c -R spec ./test/**/*.spec.js",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "clean-coverage": "rm -rfv coverage/",
    "doc": "npm run clean-doc; jsdoc -c ./jsdoc.json; echo Documentation generated under ./jsdoc folder.",
    "clean-doc": "rm -rf jsdoc",
    "serve-doc": "npm run doc; http-server ./jsdoc -p 11023",
    "clean-prod": "gulp prod.clean",
    "clean": "npm run clean-coverage; npm run clean-doc; npm run clean-prod",
    "reset": "npm run clean; rm -rf node_modules/",
    "build": "gulp prod",
    "release": "npm test; npm run doc; npm run build",
    "postinstall": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://unknownmoon@github.com/unknownmoon/utility-node-opts-parser.git"
  },
  "keywords": [
    "utility",
    "opts",
    "parser",
    "node"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/unknownmoon/utility-node-opts-parser/issues"
  },
  "homepage": "https://github.com/unknownmoon/utility-node-opts-parser#readme",
  "engines": {
    "node": ">=6.0.0",
    "npm": "^3.8.6"
  },
  "devDependencies": {
    "babel-cli": "^6.9.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-es2015-node": "^6.0.1",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "coveralls": "^2.11.9",
    "del": "^2.2.0",
    "eslint": "^2.10.2",
    "gulp": "^3.9.1",
    "gulp-babel": "^6.1.2",
    "gulp-sourcemaps": "^1.6.0",
    "http-server": "^0.9.0",
    "ink-docstrap": "^1.1.4",
    "isparta": "^4.0.0",
    "jsdoc": "^3.4.0",
    "lodash": "^4.13.1",
    "mocha": "^2.5.1",
    "moment": "^2.13.0",
    "sinon": "^1.17.4",
    "through2": "^2.0.1"
  }
}
